@model ProdutoModel
@{
    ViewData["Title"] = "Confirmação Remover Contatos";
}


<div class="text-center">

    <h3>Realmente deseja apagar o contato (@Model.Nome)?</h3>

</div>

<a class="btn btn-primary" role="button" asp-controller="Produto" asp-action="GerenciarProdutos">Cancelar Exclusão</a>
<a class="btn btn-danger" role="button" asp-route-id = "@Model.Id" asp-controller="Produtos" asp-action="Remover">Confirmar Exclusão</a>