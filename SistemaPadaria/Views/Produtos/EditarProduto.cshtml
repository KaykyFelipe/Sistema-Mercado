@model ProdutoModel
@{
    ViewData["Title"] = "Editar Page";
}

<div>
<h1 class="text-center">Editar Produtos</h1>
</div>

<br>

@* Saida de Erro CamposObrigatorios *@
@if (ViewData.ModelState.ContainsKey("CamposObrigatorios") && ViewData.ModelState["CamposObrigatorios"].Errors.Count > 0)
{
    <div class="alert alert-danger">
        <p>@ViewData.ModelState["CamposObrigatorios"].Errors[0].ErrorMessage</p>
    </div>
}

<form asp-controller="Produtos" asp-action="AtualizarProduto" method="post">

<input type="hidden" asp-for="Id">

<div class="form-floating mb-3">
  <input type="text" asp-for = "CodigoBarras" class="form-control"  placeholder="Nome do Produto">
  <label for="floatingInput">Codigo de Barras</label>
</div>

<div class="form-floating mb-3">
  <input type="text" asp-for = "Nome" class="form-control"  placeholder="Nome do Produto">
  <label for="floatingInput">Nome do Produto</label>
</div>

<div class="form-floating mb-3">
  <input type="decimal" asp-for = "Valor" class="form-control"  placeholder="Nome do Produto">
  <label for="floatingInput">Valor do Produto</label>
</div>

<div>
<select class="form-select" asp-for="MedidaProduto" >
  <option value="Unidade" >Unidade</option>
  <option value="Gramas">Gramas</option>
</select>
<br>
</div>



 <button type = "submit"class="btn btn-primary w-100" type="button"><strong>Alterar</strong></button>
 <br>
 <br>
 <a class="btn btn-secondary w-100" asp-controller="Produtos" asp-action="GerenciarProdutos" role="button">Voltar</a>
 </form>