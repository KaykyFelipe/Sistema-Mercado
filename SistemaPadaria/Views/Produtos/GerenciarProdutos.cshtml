@model List<ProdutoModel>
@{
  ViewData["Title"] = "Lista de Produtos";
}

<div class = "text-center">

<div class = "d-grid gap-2 d-md-flex justify-content-md-start"> 
  <a class="btn btn-primary" role = "button" asp-controller="Produtos" asp-action="CadastrarProduto">Adicionar Novo Produto</a>
  </div>
<br>
<h1 class="h3"><strong>Listagem de Produtos</strong></h1>
<br>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Codigo</th>
      <th scope="col">Nome</th>
      <th scope="col">Valor</th>
      <th scope="col">Medida</th>
    </tr>
  </thead>
   <tbody>
    @if(Model != null && Model.Any())
    {
      foreach (ProdutoModel produto in Model)
      {
        <tr>
          <th scope = "row">@produto.CodigoBarras</th>
          <td>@produto.Nome</td>
          <td>@produto.Valor</td>
          <td>@produto.MedidaProduto</td>
          <td>
              <div class="btn-group" role="group">
                <a role="button" class="btn btn-primary" asp-route-id = "@produto.Id" asp-controller="Produtos" asp-action="EditarProduto">Editar</a>
                <a role="button" class="btn btn-danger"  asp-route-id = "@produto.Id" asp-controller="Produtos" asp-action="RemoverProduto">Apagar</a>
                </div>
          </td>
          </tr>
      }
    }
  </tbody> 
</table>
</div>